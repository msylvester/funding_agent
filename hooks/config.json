{
  "name": "Aider-style Edit Hook",
  "version": "1.0.0",
  "description": "Provides interactive editing capabilities similar to Aider's /edit feature",
  "hooks": {
    "PreToolUse": {
      "script": "edit_hook.py",
      "function": "pre_tool_use_hook",
      "enabled": true,
      "tools": ["Edit", "MultiEdit", "Write"]
    }
  },
  "settings": {
    "auto_confirm_simple_edits": false,
    "max_session_age_hours": 24,
    "sensitive_file_extensions": [".py", ".js", ".ts", ".java", ".cpp", ".c", ".go", ".rs"],
    "complex_edit_threshold_lines": 50
  }
}
